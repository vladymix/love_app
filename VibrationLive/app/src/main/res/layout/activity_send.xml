<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    tools:context=".ReceiverActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_header_flow" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Conectado"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />



    <RelativeLayout
        android:id="@+id/centerTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:tint="#888"
            android:id="@+id/imgVibrate"
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_base_vibrate" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnRetry"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_finger_print" />
                  </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/centerTab"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Conected with"

            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/targetUser"
            android:textColor="?android:textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="ta@gmail.com"
            android:textSize="20sp" />
    </LinearLayout>

    <Switch
        android:id="@+id/swithVibrate"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Vibrate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>